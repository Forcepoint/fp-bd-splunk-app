<form>
  <label>Web Activity Dashboard</label>
  <search id="base_web_search">
    <query>index="forcepoint" sourcetype="cloud-security-gateway" "Connection IP"=* | table _time "Connection Name" "Bytes Sent" "Bytes Received" User Domain "User Agent" "Operating System" "Category Name" "Cloud App Category" "Cloud App Name" </query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <search id="driven_search" base="base_web_search">
    <query>| search User=$user_token$ "Connection Name"=$connection_name_token$</query>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="time" searchWhenChanged="false">
      <label>Time Picker</label>
      <default>
        <earliest>@w0</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="connection_name_token" searchWhenChanged="false">
      <label>Connection Name</label>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>·<fieldForLabel>Connection Name</fieldForLabel>
      <fieldForValue>Connection Name</fieldForValue>
      <search base="base_web_search">
        <query>| stats count by "Connection Name" | sort -count </query>
      </search>
    </input>
    <input type="dropdown" token="user_token" searchWhenChanged="false">
      <label>User</label>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>·<fieldForLabel>User</fieldForLabel>
      <fieldForValue>User</fieldForValue>
      <search base="base_web_search">
        <query>| search User!="Not available" | stats count by User | sort -count </query>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <html>
        <style>
          #trillsCenterWebBandwidth .facets-container{
          display: flex !important;
          justify-content: center !important;
          }
        </style>
      </html>
      <single id="trillsCenterWebBandwidth">
        <title>Bandwidth - Trend by day</title>
        <search base="driven_search">
          <query>| rename "Bytes Sent" as bs 
| rename "Bytes Received" as br 
| eval bs = replace(bs,"None", "0") 
| eval br = replace(br,"None", "0") 
| eval bs_mb=round((bs)/1000000,1) 
| eval br_mb=round((br)/1000000,1)
| timechart span=1day sum(bs_mb) as Sent, sum(br_mb) as Received</query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="height">340</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x53a051"]</option>
        <option name="rangeValues">[0]</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">1</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="underLabel">MB</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Bandwidth in MB by user</title>
        <search base="driven_search">
          <query>| search User!="Not available"
| stats sum("Bytes Sent") as Sent_b, sum("Bytes Received") as Received_b by User | eval Sent=round((Sent_b)/1000000,3) 
| eval Received=round((Received_b)/1000000,3) | fields - Sent_b Received_b | sort - Received</query>
        </search>
        <option name="count">7</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">true</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Bandwidth in MB by domain</title>
        <search base="driven_search">
          <query>| search User!="Not available"
| stats sum("Bytes Sent") as Sent_b, sum("Bytes Received") as Received_b by Domain | eval Sent=round((Sent_b)/1000000,3) 
| eval Received=round((Received_b)/1000000,3) | fields - Sent_b Received_b | sort - Received</query>
        </search>
        <option name="count">7</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Bandwidth time chart</title>
        <search base="driven_search">
          <query>| rename "Bytes Sent" as bs 
| rename "Bytes Received" as br 
| eval bs = replace(bs,"None", "0") 
| eval br = replace(br,"None", "0") | eval total_bytes = bs + br 
| eval total_mb=round((total_bytes)/1000000,1) 
| timechart span=1h sum(total_mb) as Bandwidth</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.text">Megabytes</option>
